{
    "macros": [
        "ARM_UC_USE_PAL_BLOCKDEVICE=1",
        "MBED_CLOUD_CLIENT_UPDATE_STORAGE=ARM_UCP_FLASHIAP_BLOCKDEVICE"
    ],
    "config": {
         "application-start-address": {
            "help": "Address to the beginning of the active application firmware in flash",
            "value": null
        },
        "flash-start-address": {
            "help": "Start address of internal flash. Only used in this config to help the definition of other macros.",
            "value": null
        },
        "developer-mode": {
            "help"      : "Enable Developer mode to skip Factory enrollment",
            "options"   : [null, 1],
            "value"     : 1
        },
        "button-pinname": {
            "help"      : "PinName for button.",
            "value"     : "BUTTON3"
        },
        "provide-default-variant": {
            "value": "QUECTEL_BG96"
        },
        "led-pinname"   : {
            "help"      : "PinName for led, which is attached to led blink resource.",
            "value"     : "LED1"
        },
        "bluetooth-name": {
            "help"      : "Name of the bluetooth device",
            "value"     : "\"SM Device\""
        }
    },
    "target_overrides": {
        "*": {
            "QUECTEL_BG96.provide-default": true,
            "QUECTEL_BG96.tx": "p42",
            "QUECTEL_BG96.rx": "p40",
            "QUECTEL_BG96.cts": "p35",
            "QUECTEL_BG96.rts": "p36",
            "platform.stdio-baud-rate"                  : 115200,
            "platform.stdio-convert-newlines"           : true,
            "platform.stdio-buffered-serial"            : true,
            "mbed-client.event-loop-size"               : 2048,
            "mbed-cloud-client.external-sst-support"    : true,
            "mbed-cloud-client.disable-certificate-enrollment" : 1,
            "nanostack-hal.event_loop_thread_stack_size": 8192,
            "mbed-trace.enable"                         : false
        },
        "NRF52840_DK": {
            "client_app.pal-user-defined-configuration" : "\"pal_config_MbedOS.h\"",
            
            "nordic.uart_0_fifo_size": 120,
            "nordic.uart_1_fifo_size": 120,
            "cellular.debug-at": 0,
            "client_app.primary_partition_size": 1014784,
            "lwip.ethernet-enabled": false,
            "lwip.ipv4-enabled": true,
            "lwip.ipv6-enabled": false,
            "lwip.mem-size": 22000,
            "lwip.ppp-enabled": true,
            "lwip.tcp-enabled": false,
            "nsapi.default-cellular-apn": "\"stream.co.uk\"",
            "nsapi.default-cellular-password": "\"streamip\"",
            "nsapi.default-cellular-sim-pin": "\"1234\"",
            "nsapi.default-cellular-username": "\"streamip\"",
            "target.OUTPUT_EXT": "hex",
            "target.features_add": ["BOOTLOADER", "STORAGE", "BLE"],
            "target.components_add": [
                "QSPIF",
                "FLASHIAP"
            ],
            "target.features_remove": [
                "CRYPTOCELL310"
            ],
            "target.header_offset": "0x8000",
            "target.app_offset": "0x8400",
            "target.macros_remove": [
                "MBEDTLS_CONFIG_HW_SUPPORT"
            ],
            "target.extra_labels_remove": ["SOFTDEVICE_COMMON", "SOFTDEVICE_S140_FULL", "NORDIC_SOFTDEVICE"],
            "target.extra_labels_add": ["CORDIO", "CORDIO_LL", "SOFTDEVICE_NONE", "NORDIC_CORDIO"],

            "storage_filesystem.internal_base_address" : "(24*1024)",
            "storage_filesystem.rbp_internal_size"     : "(2*4*1024)",
            "storage_filesystem.external_base_address"  : "(0x0)",
            "storage_filesystem.external_size"          : "(1024*1024*8)",
            "storage.storage_type"                      : "FILESYSTEM",
            "storage_filesystem.filesystem"             : "LITTLE",
            "storage_filesystem.blockdevice"            : "QSPIF",
            "target.network-default-interface-type": "CELLULAR",
            "target.bootloader_img": "tools/mbed-bootloader_notrace_24K.hex",
            "ppp-cell-iface.baud-rate"   : 57600,
            "update-client.storage-address": "1024*1024*1",
            "update-client.storage-locations": 1,
            "update-client.storage-size": "1024*1024*1",
            "update-client.storage-page": 1,
            "flash-start-address"               : "0x00000000",
            "client_app.sotp-section-1-address"            : "(MBED_CONF_APP_FLASH_START_ADDRESS+24*1024)",
            "client_app.sotp-section-1-size"               : "(4*1024)",
            "client_app.sotp-section-2-address"            : "(MBED_CONF_APP_FLASH_START_ADDRESS+28*1024)",
            "client_app.sotp-section-2-size"               : "(4*1024)",
            "update-client.application-details" : "(MBED_CONF_APP_FLASH_START_ADDRESS+32*1024)",
            "application-start-address"         : "(MBED_CONF_APP_FLASH_START_ADDRESS+33*1024)"
        }
    }
}
