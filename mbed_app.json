{
    "macros": [
        "ARM_UC_USE_PAL_BLOCKDEVICE=1",
        "MBEDTLS_USE_PSA_CRYPTO"
    ],
    "target_overrides": {
        "*": {
            "target.features_add"                       : ["BOOTLOADER", "STORAGE"],
            "platform.stdio-baud-rate"                  : 115200,
            "platform.stdio-convert-newlines"           : true,
            "platform.stdio-buffered-serial"            : true,
            "platform.stdio-flush-at-exit"              : true,
            "mbed-cloud-client.psa-support"             : 1,
            "rtos.main-thread-stack-size"               : 5120,
            "events.shared-stacksize"                   : 2048,
            "events.shared-eventsize"                   : 1536,
            "update-client.storage-locations"           : 1,
            "mbed-trace.enable"                         : false,
            "nsapi.default-wifi-security"               : "WPA_WPA2",
            "nsapi.default-wifi-ssid"                   : "\"SSID\"",
            "nsapi.default-wifi-password"               : null,
            "nsapi.default-cellular-apn"                : "\"internet.gec.network\"",
            "nsapi.default-cellular-sim-pin"            : null,
            "nsapi.default-cellular-username"           : "\"arkessa\"",
            "nsapi.default-cellular-password"           : "\"arkessa\""
        },
        "HANI_IOT": {
            "mbed-cloud-client.update-storage"           : "ARM_UCP_FLASHIAP_BLOCKDEVICE",
            "target.bootloader_img"                      : "tools/mbed-bootloader-hani-iot.hex",
            "target.header_offset"                       : "0x8000",
            "target.app_offset"                          : "0x8400",

            "target.components_add"                      : ["SPIF", "FLASHIAP"],
            "target.extra_labels_add"                    : ["PSA"],
            "target.macros_add"                          : ["DISABLE_ERROR_DESCRIPTION"],
            "target.restrict_size"                       : "0x5BC00",

            "storage.storage_type"                       : "FILESYSTEM",
            "storage_filesystem.filesystem"              : "LITTLE",
            "storage_filesystem.blockdevice"             : "SPIF",
            "storage_filesystem.internal_base_address"   : "0x94000",
            "storage_filesystem.rbp_internal_size"       : "(15*1024)",
            "storage_filesystem.external_base_address"   : "0x0",
            "storage_filesystem.external_size"           : "(1024*1024*1)",

            "update-client.bootloader-details"           : "0x365a4",
            "update-client.application-details"          : "0x38000",
            "update-client.storage-address"              : "(1024*1024*64)",
            "update-client.storage-size"                 : "0x5BC00",

            "target.network-default-interface-type"      : "CELLULAR",
            "cellular.use-apn-lookup"                    : false,
            "cellular.debug-at"                          : false,
            "lwip.ipv4-enabled"                          : true,
            "lwip.ethernet-enabled"                      : false,
            "lwip.ppp-enabled"                           : false,
            "QUECTEL_BG96.tx"                            : "D1",
            "QUECTEL_BG96.rx"                            : "D0",
            "QUECTEL_BG96.pwr"                           : "A5",
            "QUECTEL_BG96.rst"                           : "A4",
            "QUECTEL_BG96.provide-default"               : true,
            "QUECTEL_BG96.polarity"                      : 1,
            "button-pinname"                             : "SW1"
        }
    },
    "config": {
        "developer-mode": {
            "help"      : "Enable Developer mode to skip Factory enrollment",
            "options"   : [null, 1],
            "value"     : 1
        },
        "button-pinname": {
            "help"      : "PinName for button.",
            "value"     : "BUTTON1"
        },
        "led-pinname"   : {
            "help"      : "PinName for led, which is attached to led blink resource.",
            "value"     : "LED_RED"
        },
        "bootloader-size": {
            "help"      : "Helper macro to enable calculation of rom regions. target.header_offset and target.app_offset still needs to be calculated manually, though.",
            "value"     : "(32*1024)",
            "macro_name": "MBED_BOOTLOADER_SIZE"
        }
    }
}
